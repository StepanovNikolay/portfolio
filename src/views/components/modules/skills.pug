script(type="text/x-template")#skills-list
  ul.skills-list
   li.skills-list__item(v-for="skill in skills")
    skillsrow(
      :skill="skill"

    )

script(type="text/x-template")#skills-row
 .skills-row__title {{skill.skillsGroup}}
  ul.skills-row__list
   li.skills-row__item(v-for="(skillPercents, skillName) in skill.skills")
    skill(
      :skillName="skillName"
      :skillPercents="skillPercents"
    )

script(type="text/x-template")#skill
  figure.skill
      svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill-figure
       circle(cx="50" cy="50" r="40").skill__circle.skill__circle-under
       circle(cx="50" cy="50" r="40" ref="color-circle" ).skill__circle.skill__circle-above
      .skill__title {{skillName}}